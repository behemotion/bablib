{
  "// Comment": "Bablib MCP Server Configuration Examples",
  "// Location for Claude Desktop": "~/Library/Application Support/Claude/claude_desktop_config.json",
  "// Location for other MCP clients": "Varies by client",

  "// ============================================": "",
  "// Example 1: Read-Only Server (Default)": "",
  "// ============================================": "",
  "example_1_read_only": {
    "mcpServers": {
      "bablib": {
        "command": "bablib",
        "args": ["serve"],
        "env": {
          "BABLIB_VECTOR_STORE": "sqlite_vec"
        }
      }
    }
  },

  "// ============================================": "",
  "// Example 2: Admin Server (Localhost Only)": "",
  "// ============================================": "",
  "example_2_admin": {
    "mcpServers": {
      "bablib-admin": {
        "command": "bablib",
        "args": ["serve", "--admin"],
        "env": {
          "BABLIB_VECTOR_STORE": "sqlite_vec"
        }
      }
    }
  },

  "// ============================================": "",
  "// Example 3: Both Servers Concurrently": "",
  "// ============================================": "",
  "example_3_both_servers": {
    "mcpServers": {
      "bablib": {
        "command": "bablib",
        "args": ["serve", "--port", "9383"],
        "env": {}
      },
      "bablib-admin": {
        "command": "bablib",
        "args": ["serve", "--admin", "--port", "9384"],
        "env": {}
      }
    }
  },

  "// ============================================": "",
  "// Example 4: With Qdrant Vector Store": "",
  "// ============================================": "",
  "example_4_qdrant": {
    "mcpServers": {
      "bablib": {
        "command": "bablib",
        "args": ["serve"],
        "env": {
          "BABLIB_VECTOR_STORE": "qdrant",
          "BABLIB_QDRANT_URL": "http://localhost:6333"
        }
      }
    }
  },

  "// ============================================": "",
  "// Example 5: Custom Host/Port": "",
  "// ============================================": "",
  "example_5_custom": {
    "mcpServers": {
      "bablib": {
        "command": "bablib",
        "args": [
          "serve",
          "--host", "0.0.0.0",
          "--port", "9383"
        ],
        "env": {}
      }
    }
  },

  "// ============================================": "",
  "// Manual Connection (Without Auto-Start)": "",
  "// ============================================": "",
  "manual_connection_instructions": {
    "step_1": "Start server manually: bablib serve",
    "step_2": "Server URL: http://0.0.0.0:9383",
    "step_3_health_check": "curl http://0.0.0.0:9383/mcp/v1/health",
    "step_4_mcp_client": "Use Claude Desktop or implement MCP protocol",
    "note": "Standard HTTP clients won't work for MCP endpoints"
  },

  "// ============================================": "",
  "// Available MCP Endpoints": "",
  "// ============================================": "",
  "mcp_endpoints": {
    "read_only_server": {
      "port": 9383,
      "host": "0.0.0.0",
      "operations": [
        "list_projects - List all documentation projects",
        "search - Semantic search across documents",
        "get_file - Read file contents (project-type restrictions apply)",
        "list_files - List files in project",
        "vector_search - Search using embeddings"
      ],
      "health_check": "GET http://0.0.0.0:9383/mcp/v1/health (standard HTTP)"
    },
    "admin_server": {
      "port": 9384,
      "host": "127.0.0.1",
      "security": "localhost only",
      "operations": [
        "All read-only operations plus:",
        "execute_command - Run Bablib commands",
        "create_project - Create new projects",
        "crawl - Start crawling operations",
        "batch_process - Batch operations",
        "BLOCKED: uninstall, reset, delete-all-projects"
      ],
      "health_check": "GET http://127.0.0.1:9384/mcp/v1/health (standard HTTP)"
    }
  },

  "// ============================================": "",
  "// Testing the Connection": "",
  "// ============================================": "",
  "testing": {
    "start_server": "bablib serve",
    "health_check": "curl http://0.0.0.0:9383/mcp/v1/health",
    "expected_response": {
      "status": "healthy",
      "version": "0.3.2",
      "server_type": "read-only"
    },
    "mcp_operations": "Require MCP protocol client (Claude Desktop, Claude Code, etc.)",
    "python_example": "See mcp_client_example.py in this directory"
  }
}
